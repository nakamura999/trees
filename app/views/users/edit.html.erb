<div class="row">
  <div class="col-xs-12 text-center">
	    <h2 class="main-tex"><strong>My Page 編集</strong></h2>
  </div>
</div>

<%= form_for @user do |f| %>
<div class="row">
  <div class="col-xs-6 text-center">
    <%= attachment_image_tag @user, :profile_image, :fill, 250, 300, fallback: "no_image.jpg", id: :img_prev, class: "profile-image pre" %><br>
    <%= f.attachment_field :profile_image, class: "btn btn-danger image-tag", id: :user_img %>
  </div>
  <div class="col-xs-4">

    <label class="col-sm-12 text-user">氏名</label>
    <div class="col-sm-12"><%= f.text_field :name, class: "my-edit" %></div>

    <label class="col-sm-12 text-user">フリガナ</label>
    <div class="col-sm-12"><%= f.text_field :kana_name, class: "my-edit" %></div>

    <label class="col-sm-12 text-user">ニックネーム</label>
    <div class="col-sm-12"><%= f.text_field :nickname, class: "my-edit" %></div>

    <label class="col-sm-12 text-user">PR</label>
    <div class="col-sm-12"><%= f.text_area :body, class: "my-edit" %></div>

    <label class="col-sm-12 text-user">都道府県</label>
    <div class="col-sm-12"><%= f.text_field :prefectures, class: "my-edit" %></div>

    <label class="col-sm-12 text-user">メールアドレス</label>
    <div class="col-sm-12"><%= f.text_field :email, class: "my-edit" %></div>

    <label class="col-sm-12 text-user">情報(一般or美容師)</label>
    <div class="col-sm-12"><%= f.select :status, ['一般', '美容師'] %></div>

    <div class="col-sm-12">
      <%= f.submit "変更を保存", class: "btn btn-danger image-tag" %>
      <%= link_to '退会する', withdraw_path, class: "btn btn-danger image-tag" %>
    </div>
  </div>
</div>
<% end %>
