<div class="row main-back">
  <div class="col-xs-12 text-center search-user">
    <h5><strong>User検索(ニックネーム)</strong></h5>
      <%= form_tag(admins_users_path, :method => "get") do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "検索", :nickname => nil %>
        </p>
      <% end %>
  </div>
  <div class="col-xs-12 text-center admin-user-main">
    <h3><strong class="user-main-text">会員一覧</strong></h3><br>
    <div class="col-xs-2">
    </div>
    <div class="col-xs-7 admin-user-box">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>氏名</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
          </tr>
        </thead>

        <tbody class="admin-users">
        <% @users.each do |j| %>
          <tr>
            <td>
              <%= link_to admins_user_path(j.id) do %>
                <%= j.name %>
              <% end %>
            </td>
            <td>
              <%= j.nickname %>
            </td>
            <td>
              <%= j.email %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

    <div class="col-xs-12 text-center admin-user-main">
    <h3><strong class="user-main-text">会員退会済一覧</strong></h3><br>
    <div class="col-xs-2">
    </div>
    <div class="col-xs-7 admin-user-box">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>氏名</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
          </tr>
        </thead>

        <tbody class="admin-users">
        <% @user_deletes.each do |j| %>
          <tr>
            <td>
                <%= j.name %>
            </td>
            <td>
              <%= j.nickname %>
            </td>
            <td>
              <%= j.email %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
