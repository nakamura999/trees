<div class="row main-back">
  <div class="col-xs-12 text-center admin-user-main back-black">
    <h2><strong>会員詳細画面</strong></h2><br>
    <div class="col-xs-1">
    </div>
    <div class="col-xs-10">

      <div class="form-group row admin-user-items">
        <label for="ID" class="col-sm-3 col-form-label text-right">会員ID</label>
        <div class="col-sm-9">
            <%= @user.id %>
        </div>
      </div>

      <div class="form-group row admin-user-items">
        <label for="name" class="col-sm-3 col-form-label text-right">氏名</label>
        <div class="col-sm-9">
  	      <%= @user.name %>
        </div>
      </div>

      <div class="form-group row admin-user-items">
        <label for="name" class="col-sm-3 col-form-label text-right">フリガナ</label>
        <div class="col-sm-9">
          <%= @user.kana_name %>
        </div>
      </div>

      <div class="form-group row admin-user-items">
        <label for="postcode" class="col-sm-3 col-form-label text-right">ニックネーム</label>
        <div class="col-sm-9">
          <%= @user.nickname %>
        </div>
      </div>

      <div class="form-group row admin-user-items">
        <label for="adress" class="col-sm-3 col-form-label text-right">都道府県</label>
        <div class="col-sm-9">
          <%= @user.prefectures %>
        </div>
      </div>

      <div class="form-group row admin-user-items">
        <label for="phone" class="col-sm-3 col-form-label text-right">情報</label>
        <div class="col-sm-9">
          <%= @user.status %>
        </div>
      </div>

      <div class="col-xs-12 text-right">
        <%= link_to "会員削除", admins_user_path(@user.id), method: :delete, class: "btn btn-sm btn-primary" %>
      </div>
　  </div>
  </div>
</div>