<div class="row main-back">
  <div class="col-xs-12 text-center bottom-set">
    <h2><strong>会員詳細画面</strong></h2><br>
    <div class="col-xs-1">
    </div>
    <div class="col-xs-11">

      <div class="form-group row">
        <label for="ID" class="col-sm-2 col-form-label">会員ID</label>
        <div class="col-sm-10">
          <div class="col-sm-10">
            <%= @user.id %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">氏名</label>
        <div class="col-sm-10">
  	      <%= @user.name %>
        </div>
      </div>

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">フリガナ</label>
        <div class="col-sm-10">
          <%= @user.kana_name %>
        </div>
      </div>

      <div class="form-group row">
        <label for="postcode" class="col-sm-2 col-form-label">ニックネーム</label>
        <div class="col-sm-10">
          <%= @user.nickname %>
        </div>
      </div>

      <div class="form-group row">
        <label for="adress" class="col-sm-2 col-form-label">都道府県</label>
        <div class="col-sm-10">
          <%= @user.prefectures %>
        </div>
      </div>

      <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">情報</label>
        <div class="col-sm-10">
          <%= @user.status %>
        </div>
      </div>
　  </div>
  </div>
</div>