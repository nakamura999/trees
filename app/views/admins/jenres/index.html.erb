<div class="row main-back">
  <div class="col-xs-12 text-center bottom-set">
    <h2><strong>ジャンル追加・一覧画面</strong></h2><br>
    <%= form_for @jenre, url: admins_jenres_path do |f| %>
      <div class="field botton-b">
        <p><strong>ジャンル</strong></p>
        <%= f.text_field :name, class: "text-pas" %>
        <%= f.submit "追加", class: "btn btn-danger" %>
      </div>
    <% end %>

    <div class="col-xs-2">
    </div>
    <div class="col-xs-7">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="admin-users">
        <% @jenres.each do |j| %>
          <tr>
            <td>
            	<%= j.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admins_jenre_path(j.id), class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>