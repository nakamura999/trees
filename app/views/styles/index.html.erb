<!-- スタイル一覧画面 -->
<div class="row">
  <div class="col-xs-2 index-status">
  	  <div class="col-xs-12 text-center">
  	  	 <%= link_to styles_path(status: "MENS") do %>
  	       <img class="image-box-index" width="120" src="/assets/mens.jpg">
  	     <% end %>
  	     <%= link_to styles_path(status: "LADIES") do %>
  	       <img class="image-box-index" width="120" src="/assets/ladies.jpg">
  	     <% end %>
      </div>
      <div class="col-xs-12 text-center jenre">
        <div class="panel panel-color">
          <div class="panel-im">
            <h4><strong>ジャンル検索</strong></h4>
          </div>
          <div class="panel-body">
            <% @jenres.each do |j| %>
              <strong><%= link_to j.name, styles_path(jenre_id: j.id) %></strong><br><br>
            <% end %>
          </div>
        </div>
      </div>
  </div>

  <!-- スタイル一覧 -->
  <div class="col-xs-10">
    <div class="col-xs-12 text-center">
      <h2 class="main-tex"><strong>Styles</strong></h2>
    </div>
    <div class="row">
      <div class="my-styles">
        <div class="col-xs-12">
          <% @styles.each do |f| %>
            <div class="box-efect">
              <%= link_to style_path(f.id) do %>
                <%= attachment_image_tag f, :image, :fill, 200, 250, format: 'jpeg', class: "style-image" %>
              <% end %>
            </div>
          <% end %>
         </div>
      </div>
    </div>
  </div>

</div>
