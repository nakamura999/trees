<!-- フォローボタン -->
<% if user_signed_in? %>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_unfollow_path(user.id), class: "btn btn-primary", method: :post %>
    <% else %>
      <%= link_to "フォローする", user_follow_path(user.id), class: "btn btn-success", method: :post %>
    <% end %>
  <% end %>
<% end %>
